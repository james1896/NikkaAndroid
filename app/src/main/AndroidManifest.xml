<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.never.nikkaandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".NikkaApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoAppTheme">

        <uses-permission android:name="android.permission.INTERNET" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".home.BalanceActivity">
            <intent-filter>
                <action android:name="android.intent.action.Balance" />/>
            </intent-filter>
        </activity>

        <activity android:name=".home.RecordActivity">
            <intent-filter>
                <action android:name="android.intent.action.Record" />/>
            </intent-filter>
        </activity>
    </application>

</manifest>