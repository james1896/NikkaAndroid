<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white"
        android:orientation="vertical"
        tools:context="com.never.nikkaandroid.me.ThankActivity">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/view_path"
            android:paddingTop="@dimen/m_10">

            <TextView
                android:lineSpacingExtra="@dimen/m_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thank_for"
                android:textSize="@dimen/textsize_18"
                android:textColor="@color/theme_pink"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_pink"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/m_20"
            android:layout_marginLeft="@dimen/m_20"/>
    </LinearLayout>

</layout>

